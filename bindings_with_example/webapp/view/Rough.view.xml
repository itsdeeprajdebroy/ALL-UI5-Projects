<mvc:View
    controllerName="sap.ro.application.bindingswithexample.controller.Rough"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Page
        id="page"
        title="{i18n>user}"
    >
        <!-- Property Binding -->
        <content>
            <VBox
                id="_IDGenVBox1"
                class="sapUiSmallMargin"
            >
                <core:Icon id="_IDGenIcon" src="sap-icon://discussion-2" size="2rem" color="green" />
                <Label
                    id="_IDGenLabel"
                    text="User-Name:"
                />
                <Text
                    id="_IDGenText1"
                    text="{UserModel>name}"
                />
                <Label
                    id="_IDGenLabel2"
                    text="Email:"
                />
                <Text
                    id="_IDGenText2"
                    text="{UserModel>email}"
                />
                <Label
                    id="_IDGenLabel3"
                    text="Description:"
                />
                <Text
                    id="_IDGenText3"
                    text="{UserModel>body}"
                    wrappingType="Hyphenated"
                />
            </VBox>
        </content>
    </Page>
</mvc:View>
